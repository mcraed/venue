<div class="show-wide-container">
	<header>
		<div class='nav'>
			<ul>
			<div class="logo"></div>
			<div class="nav-link-container">
				<li><%= link_to "Shows", shows_path %></li>
				<li><%= link_to "Contributors", contributors_path %></li>
			</div>
			</ul>
			<% if current_user || current_contributor %>
				<%= link_to "Log Out", logout_path, method: :delete %> 
			<% end %>
		</div>
	</header>
	<div class="show-container">
		<div class="logged-info">
			<% if current_user %>
				<div>
					<h4>Logged in as <%= current_user.username %></h4>
				</div>

				<li><%= link_to "Home", user_path(current_user.id), class: "nav-links" %></li>

			<% elsif current_contributor %>
				<div>
					<h4>Logged in as <%= fullname(current_contributor) %></h4>
				</div>

				<li><%= link_to "Home", contributor_path(current_contributor.id) %></li>

			<% else %>
				<div class="sign-up-prompt">
					<h4><%= link_to "Log in/Sign up", root_path %> For Exclusive Contests, Events, Promotions, and More!</h4>
				</div>	
			<% end %>	
		</div>
		<div class="show-index-container">
			<h3>All Shows</h3>
			<div class="show-index-overflow">
				<% @shows.each do |s| %>
					<!-- mouse over for s.description? -->
					<div class="show-instance">	
						<div class="show-instance-img">
							<a href=<%= show_path(s.id) %> ><%= image_tag s.image.url, width: '200', height: '200' %></a>
						</div>

						<div class="show-instance-name">
							<a href=<%= show_path(s.id) %> ><%= s.name %>
							</a>
						</div>
						<div class="show-instance-desc">
							<%= truncate("#{s.desc}",  length: 70) %>
						</div>
						<br clear="all" />
					</div>
				<% end %>	
			</div>
		</div>
		<div class='latest-episode-label'>
			<h2>Latest Episode on Venue</h2>
		</div>
		<div class="latest-episode-container">	
			<div class="latest-episode">
				<h2><%= Episode.last.title %></h2>
				<h5><%= Episode.last.show.name %></h5>
				<%= video_tag Episode.last.video.url, controls: true, width: '500', height: '250', class: 'latest-episode-video' %>
			</div>
		</div>
	</div>
</div>
