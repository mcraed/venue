<div id='landing-container'>
	<div class='nav'>
		<ul>
			<div class="home-logo"></div>
			<div class="nav-link-container">
				<li><%= link_to "Shows", shows_path, class: "home-nav-links" %></li>
				<li><%= link_to "Contributors", contributors_path, class: "home-nav-links" %></li>
			</div>
		</ul>
		<div class="home-logout">
			<% if current_user || current_contributor %>
				<%= link_to "Log Out", logout_path, method: :delete %> 
			<% end %>
		</div>
	</div>
	<% if current_user %>
		<div>
			<h4>Logged in as <%= current_user.username %></h4>
		</div>
		<li><%= link_to "Home", user_path(current_user.id), class: "home-nav-links" %></li>
	<% elsif current_contributor %>
		<div>
			<h4>Logged in as <%= fullname(current_contributor) %></h4>
		</div>
		<li><%= link_to "Home", contributor_path(current_contributor.id) %></li>
	<% end %>	

	<div id="brand">
		<h3 id="brand-name">Venue</h3>
	</div>
	<div class="home-sign-in-form">
		<%= form_for(:session, url: login_path) do |f| %>	
			<h3>Sign In</h3>
			<div class="hsi-field">
				<%= f.label :username, class: "hsi-label" %>
				<%= f.text_field :username, class: "hsi-input" %>
			</div>
			<div class="hsi-field">
				<%= f.label :password, class: "hsi-label" %>
				<%= f.password_field :password, class: "hsi-input" %>
			</div>
			<div class="hsi-actions">
				<%= f.submit "Log In", controller: :sessions, action: :create, class: "hsi-button" %>
			</div>
			<div id="home-sign-up-prompt">
				<% if !current_user || !current_contributor %>
					<h4><%= link_to "Sign Up", new_user_path %> For Exclusive Contests, Events, Promotions, and more!</h4>
				<% end %>
			</div>
		<% end %>
	</div>
</div>