

<div id='landing-container'>
	<div class='nav'>
		<ul>
			<div class="home-logo"></div>
			<div class="nav-link-container">
				<li><%= link_to "Shows", shows_path, class: "home-nav-links" %></li>
				<li><%= link_to "Contributors", contributors_path, class: "home-nav-links" %></li>
			</div>
		</ul>
		<div class="home-logout">
			<% if current_user || current_contributor %>
				<%= link_to "Log Out", logout_path, method: :delete %> 
			<% end %>
		</div>
	</div>
	<% if current_user %>
		<div>
			<h4>Logged in as <%= current_user.username %></h4>
		</div>
		<li><%= link_to "Home", user_path(current_user.id), class: "home-nav-links" %></li>
	<% elsif current_contributor %>
		<div>
			<h4>Logged in as <%= fullname(current_contributor) %></h4>
		</div>
		<li><%= link_to "Home", contributor_path(current_contributor.id) %></li>
	<% end %>	

	<div id="brand">
		<h3 id="brand-name">Venue</h3>
	</div>
</div>
<div class="shows-index">
	<%= render 'shows/index' %>	
</div>
<br clear="all" />
<div class="contributors-index">
	<%= render 'contributors/index'%>
</div>