<div id='landing-container'>
	<div class='nav'>
		<ul>
			<a href="/"><div class="home-logo"></div></a>
		</ul>
	</div>
	<% if current_user %>
		<div>
			<h4>Logged in as <%= current_user.username %></h4>
		</div>
		<li><%= link_to "Home", user_path(current_user.id), class: "home-nav-links" %></li>
	<% elsif current_contributor %>
		<div>
			<h4>Logged in as <%= fullname(current_contributor) %></h4>
		</div>
		<li><%= link_to "Home", contributor_path(current_contributor.id) %></li>
	<% end %>	

	<div id="brand">
		<h3 id="brand-name">Venue</h3>
	</div>
</div>
<a name="shows"></a>
<div class="shows-index">
	<%= render 'shows/index' %>	

</div>
<div class="homepage-video-container">
	<div class="homepage-video">
		<%= video_tag @ran_epi.video.url, width: '500', height: '250', controls: true, class: 'homepage-episode' %>
	</div>
	<div class="homepage-video2-info">
			<h2><%= truncate("#{@ran_epi.title}", length: 30) %></h2>
			<h3><%= truncate("#{@ran_epi.show.name}", length: 35) %></h3>
			<%= image_tag @ran_epi.show.image.url, width: '200', height: '200', class: 'homepage-video2-info-img' %>
	</div>
	<div class="contributor-index-container">
		<div class="contributor-index-label">
		</div>
		<% @contributors.each do |c| %>
			<div class="contributor-instance">
				<a href=<%= contributor_path(c.id) %> >
					<%= image_tag c.avatar.url, width: '130', height: '130' %>
				</a>
			</div>
		<% end %>
	</div>
	<br clear='all' />
	<footer>
		<h4>Venue 2016</h4>
	</footer>
</div>