
	<%= form_for @contributor,  :url => { :action => "update" } do |f| %>
		<h3>Edit Contributor</h3>
		<div >
			<%= f.label "First Name" %>
			<%= f.text_field :fname %>
		</div>

		<div >
			<%= f.label "Last Name" %>
			<%= f.text_field :lname %>
		</div>

		<div >
			<%= f.label "AKA (Optional)" %>
			<%= f.text_field :aka %>
		</div>

		<div >
			<%= f.label :email %>
			<%= f.email_field :email %>
		</div>	

		
		<div >
			<%= f.label "Profile Picture" %>
			<%= f.file_field :avatar %>
		</div>

		<div >
			<%= f.label "Twitter" %>
			<%= f.text_field :twitter %>
		</div>

		<div >
			<%= f.label :bio %>
			<%= f.text_area :bio %>
		</div>

		<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
		</div>

		<div>
			<%= f.label :password_confrimation %>
			<%= f.password_field :password_confrimation %>
		</div>

		<div id="actions">
			<%= f.submit %>
		</div>

	<% end %>
<br />
<br />
<br />
<div>
	<%= button_to "Delete Account", {controller: :contributors, action: :destroy}, {method: :delete} %>
</div>
