<div class="contributor-wide-container">
	<header>
			<div class='nav'>
				<ul>
				<div class="logo"></div>
				<div class="nav-link-container">
					<li><%= link_to "Shows", shows_path, class: "nav-links" %></li>
					<li><%= link_to "Contributors", contributors_path, class: "nav-links" %></li>
				</div>
				</ul>
				<% if current_user || current_contributor %>
					<%= link_to "Log Out", logout_path, method: :delete %> 
				<% end %>
			</div>
	</header>
	<div class="contributor-container">
		<div class="logged-info">
			<% if current_user %>
				<div>
					<h4>Logged in as <%= current_user.username %></h4>
				</div>

				<li><%= link_to "Home", user_path(current_user.id), class: "nav-links" %></li>

			<% elsif current_contributor %>
				<div>
					<h4>Logged in as <%= fullname(current_contributor) %></h4>
				</div>

				<li><%= link_to "Home", contributor_path(current_contributor.id) %></li>

			<% else %>
				<div class="sign-up-prompt">
					<h4><%= link_to "Log in/Sign up", root_path %> For Exclusive Contests, Events, Promotions, and More!</h4>
				</div>	
			<% end %>	
		</div>
		<div class="contributor-index-container">
			<div class="contributors-label">
				<h2>Contributors</h2>
			</div>
			<div class="contributor-index-overflow">
				<% @contributors.each do |c| %>
					<div class="contributor-instance">
						<a href=<%= contributor_path(c.id) %> ><%= image_tag c.avatar.url(:thumb), class: 'contributor-image' %></a>
						
						<div class="contributor-info">
							<div class="contributor-name">
								<% if c.aka != ""%>
									<a href=<%= contributor_path(c.id) %> ><%= c.aka %></a>
								<% else %>
									<a href=<%= contributor_path(c.id) %> ><%= fullname(c) %></a>
								<% end %> 
							</div>
							<% if c.shows %>
								<div class='contributor-shows'>
									<% c.shows.each do |s| %>
										<%= link_to Show.find(s.id).name, show_path(s.id) %>
									<% end %>
								</div>
							<% end %>
						</div>
						<br clear=all />
					</div>
				<% end %>
				<br />
				<% if !current_contributor  %>
					<div id="contributor-sign-in">
						<%= link_to "Contributors", signin_path %>
					</div>
				<% end %>
			</div>
			<div class="random-episode-container">
				<h2><%= truncate("#{@episode.title}", length: 30) %></h2>
				<h4><%= truncate("#{@episode.description}", length: 70) %>
				<%= video_tag @episode.video.url, width: '500', height: '250', controls: true, class: 'random-episode-video' %>
			</div>
			<br clear='all'/>
		</div>
	</div>
</div>