<h2><%= fullname(@contributor) %></h2>
<%= image_tag @contributor.avatar(:medium) %>
	<div>
		<%= link_to "Edit Profle", edit_contributor_path %>
	</div>
<div>
	<h2>Bio:</h2>
	<div>
		<h4><%= @contributor.bio %></h4>
	</div>
</div>
<!-- run if statement to display tweets by full name or aka  -->
