<header>
	<div class='nav'>
		<ul>
			<!-- add splash page, then root path will be shows index -->
			<li><h2><%= link_to "Venue", root_path %></h2></li> 
			<% if current_user %>
				<div>
					<h4>Logged in as <%= current_user.username %></h4>
				</div>
				<li><%= link_to "Home", user_path(current_user.id) %></li>
			<% elsif current_contributor %>
				<div>
					<h4>Logged in as <%= fullname(current_contributor) %></h4>
				</div>
				<li><%= link_to "Home", contributor_path(current_contributor.id) %></li>
			<% end %>	
			<li><%= link_to "Shows", shows_path %></li>
			<li><%= link_to "Contributors", contributors_path %></li>
		</ul>
		<% if current_user || current_contributor %>
			<%= link_to "Log Out", logout_path, method: :delete %> 
		<% end %>
	</div>
</header>
<div class="sign-up-prompt">
	<% if !current_user || !current_contributor %>
		<h4><%= link_to "Sign Up", new_user_path %> For Exclusive Contests, Events, and Promotions!</h4>
	<% end %>
</div>
<br />

<% if @contributor.aka != "" %>
	<h2><%= @contributor.aka %></h2>
<% else %>
	<h2><%= fullname(@contributor) %></h2>
<% end %>
<%= image_tag @contributor.avatar(:medium) %>
	<div>
	<% if @contributor.since %>
		<h3>Contributor Since <%= @contributor.since %></h3>
	<% end %>
	</div>
	<div>
		<%= link_to "Edit Profle", edit_contributor_path %>
	</div>
<div>
	<h2>Bio:</h2>
	<div>
		<h4><%= @contributor.bio %></h4>
	</div>
</div>
<div>
	<h4>Shows</h4>
	<% @contributor.contributor_shows.each do |s| %>
		<div>
			<h4><%= link_to Show.find(s.show_id).name, show_path(s.show_id) %></h4>
			<a href=<%= show_path(s.show_id) %> > <%= image_tag Show.find(s.show_id).image.url(:thumb) %> </a>
		</div>
	<% end %>
</div>
<% if current_contributor == @contributor %>
	<div>
		<%= render 'shows/new' %>
	</div>
<% end %>
<!-- run if statement to display tweets by full name or aka  -->
<a class="twitter-timeline" data-width="500" data-dnt="true" data-theme="dark" href=<%= "https://twitter.com/#{@contributor.twitter}" %> >Tweets by<% if @contributor.aka %> <%= @contributor.aka %><% else %> <%= fullname(@contributor) %><% end %></a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>